  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "declaration": true, // Generates .d.ts files
    "outDir": "./dist", // Output directory
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/component", "src/propType"],
  "exclude": ["node_modules"]
}
